<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculadoraxml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculadora_tabla_activity"
    android:padding="16dp"
    android:background="@color/skyblue">

    <TableLayout
        android:id="@+id/tablacal"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_weight="1.2"
            >

            <TextView

                android:id="@+id/txt_display"
                android:layout_span="4"
                android:gravity="right"
                android:padding="16dp"
                android:text="0"
                android:textSize="52sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:textColor="@color/black"

                android:layout_marginRight="80dp"/>
        </TableRow>

        <TableRow
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btnClear"
                app:backgroundTint="@color/red"
                android:textColor="@color/white"
                app:background="@drawable/botones_amarillos"
                android:text="C"
                android:textSize="24sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnParenthesesOpen"
                android:text="("
                android:textSize="24sp"
                app:backgroundTint="@color/gris"
                android:textColor="@color/white"
                app:background="@drawable/botones_amarillos"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                />

        <Button
            android:id="@+id/btnParenthesesClose"
            android:text=")"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            app:backgroundTint="@color/gris"
            android:textColor="@color/white"
            app:background="@drawable/botones_amarillos"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"/>

        <Button
            android:id="@+id/btnDivide"
            android:text="รท"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            app:backgroundTint="@color/gris"
            android:textColor="@color/white"
            app:background="@drawable/botones_amarillos"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"/>
    </TableRow>

    <!-- Fila 3 - Botones 7, 8, 9, * -->
        <TableRow
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn7"
                android:text="7"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24sp"
                app:backgroundTint="@color/gris"
                android:textColor="@color/white"
                app:background="@drawable/botones_amarillos"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"/>

            <Button
                android:id="@+id/btn8"
                android:text="8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24sp"
                app:backgroundTint="@color/gris"
                android:textColor="@color/white"
                app:background="@drawable/botones_amarillos"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"/>

            <Button
                android:id="@+id/btn9"
                android:text="9"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24sp"
                app:backgroundTint="@color/gris"
                android:textColor="@color/white"
                app:background="@drawable/botones_amarillos"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"/>

        <Button
            android:id="@+id/btnMultiply"
            android:text="*"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            app:backgroundTint="@color/gris"
            android:textColor="@color/white"
            app:background="@drawable/botones_amarillos"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"/>
    </TableRow>

    <!-- Fila 4 - Botones 4, 5, 6, + -->
    <TableRow
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            app:backgroundTint="@color/blue"
            android:textColor="@color/white"
            app:background="@drawable/botones_amarillos"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"/>

        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            app:backgroundTint="@color/blue"
            android:textColor="@color/white"
            app:background="@drawable/botones_amarillos"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"/>

        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            app:backgroundTint="@color/blue"
            android:textColor="@color/white"
            app:background="@drawable/botones_amarillos"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"/>

        <Button
            android:id="@+id/btnPlus"
            android:text="+"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            app:backgroundTint="@color/blue"
            android:textColor="@color/white"
            app:background="@drawable/botones_amarillos"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"/>
    </TableRow>

    <!-- Fila 5 - Botones 1, 2, 3, - -->
    <TableRow
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1"
            android:text="1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            app:backgroundTint="@color/blue"
            android:textColor="@color/white"
            app:background="@drawable/botones_amarillos"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn2"
            android:text="2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            app:backgroundTint="@color/blue"
            android:textColor="@color/white"
            app:background="@drawable/botones_amarillos"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"/>

        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            app:backgroundTint="@color/blue"
            android:textColor="@color/white"
            app:background="@drawable/botones_amarillos"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"/>

            <Button
                android:id="@+id/btnMinus"
                android:text="-"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24sp"
                app:backgroundTint="@color/yellow"
                android:textColor="@color/white"
                app:background="@drawable/botones_amarillos"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"/>
        </TableRow>

    <!-- Fila 6 - Botones AC, 0, ., = -->
        <TableRow
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnAC"
                android:text="AC"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:padding="0dp"
                app:backgroundTint="@color/red"
                android:textColor="@color/white"
                app:background="@drawable/botones_amarillos"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"/>

            <Button
                android:id="@+id/btn0"
                android:text="0"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24sp"
                app:backgroundTint="@color/blue"
                android:textColor="@color/white"
                app:background="@drawable/botones_amarillos"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"/>

            <Button
                android:id="@+id/btnDot"
                android:text="."
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24sp"
                app:backgroundTint="@color/blue"
                android:textColor="@color/white"
                app:background="@drawable/botones_amarillos"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"/>

            <Button
                android:id="@+id/btnEqual"
                android:text="="
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24sp"
                app:backgroundTint="@color/yellow"
                android:textColor="@color/white"
                app:background="@drawable/botones_amarillos"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>