<?xml version="1.0" encoding="utf-8"?>
<!--animales-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ejemplo05_spinner_animales">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/boton_estilo_3"
        app:backgroundTint="@null"
        android:padding="40dp">

        <TextView
            android:layout_weight="1"

            android:id="@+id/tv_titulo_animales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/libre_baskerville"
            android:text="Animales"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"/>

        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/libre_baskerville"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:text="Selecciona un animal"
            android:id="@+id/tv_animal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp" />
        <Spinner
            android:textColor="@color/black"

            app:backgroundTint="@null"
            android:id="@+id/spinnerCategoria"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:spinnerMode="dropdown"
            />
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/libre_baskerville"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:text="Animal seleccionado"
            android:id="@+id/tv_animal_seleccionado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp" />
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/libre_baskerville"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_weight="0.5"
            android:text="Selecciona una raza del animal: "

            android:id="@+id/tv_raza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp" />
        <Spinner
            android:textColor="@color/black"

            android:id="@+id/spinnerRaza"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
        <TextView
            android:textColor="@color/black"
            android:layout_weight="0.5"
            android:text="Raza del animal seleccionada"
            android:id="@+id/tv_raza_seleccionada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/libre_baskerville"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <ImageView

            android:id="@+id/img_animal"
            android:layout_width="match_parent"
            android:layout_height="115dp" />

        <ImageView

            android:id="@+id/img_raza"
            android:layout_width="match_parent"
            android:layout_height="136dp" />

        <TextView
            android:layout_weight="0.5"

            android:id="@+id/textViewSeleccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp" />
        <Button
            android:textColor="@color/white"

            android:layout_weight="1"
            android:textSize="24sp"
            android:backgroundTint="@color/verde_bosque"
            android:id="@+id/boton_sonido_animal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escuchar sonido del animal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>