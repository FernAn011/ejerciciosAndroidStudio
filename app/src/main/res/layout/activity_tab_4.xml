<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/imageButtonUniversidad"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@drawable/uni"
        android:contentDescription="Universidad Icon"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="centerInside"
        android:layout_marginEnd="16dp" />

    <ImageButton
        android:id="@+id/imageButtonIngenieria"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@drawable/logo_sistemas"
        android:contentDescription="Ingenieria Icon"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="centerInside" />
</LinearLayout>
